

<div>
  
  <div id='search_panel'>
    <%= form_tag tv_shows_path, method: 'GET' do %>
      <label>TV Show</label>
      <%= text_field_tag :tv_show, params[:tv_show] %>
      <br>
      <label>Channel</label>
      <%= text_field_tag :channel, params[:tv_show] %>
      <br>
      <%= submit_tag "search" %>
    <% end %>

  <%= @tv_shows.count %> records found
  </div>
  <div id='results'>
    <table>
      <thead>
        <tr>
          <th>Channel Name</th>
          <th> TV Show</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Favorite</th>
        </tr>
      </thead>
      <tbody>
        <% if @tv_shows.present? %>
          <% @tv_shows.each do |t| %>
            <tr>
              <td><%= t.channel.name %></td>
              <td><%= t.show_name %></td>
              <td><%= t.start_time %></td>
              <td><%= t.end_time %></td>
              <td id="<%= "favorite_#{t.id}" %>"><%= button_to(t.favorite(current_user), mark_favorite_tv_show_path(t)) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr><td colspan="5">No show found</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>